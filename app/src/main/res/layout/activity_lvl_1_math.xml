<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapp"
    tools:context=".Lvl_1_math">


    <Button
        android:id="@+id/ansBtn1"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/ovalstyle"
        android:text="8"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="26dp"
        app:backgroundTint="#C6EAB6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_textView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/ansBtn2"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ovalstyle"
        android:text="6"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="26dp"
        app:backgroundTint="#EABCB6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ansBtn1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/ansBtn3"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ovalstyle"
        android:text="4"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="26dp"
        app:backgroundTint="#B6EAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ansBtn2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/ansBtn4"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ovalstyle"
        android:text="2"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="26dp"
        app:backgroundTint="#EAE3B6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ansBtn3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/answer_textView"
        android:layout_width="181dp"
        android:layout_height="73dp"
        android:layout_marginTop="80dp"
        android:text="2 + 2"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#0A0B0B"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>